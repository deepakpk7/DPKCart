<div class="max-w-6xl mx-auto px-4 py-12" x-data="{ new_address: false }">
  <!-- Header -->
  <div class="flex flex-col md:flex-row items-center justify-between gap-4 mb-10">
    <h1 class="text-3xl font-bold text-gray-800">My Addresses</h1>
    <div class="flex flex-wrap gap-3">
      <button x-on:click="new_address = true" type="button"
        class="bg-gray-900 hover:bg-gray-700 text-white px-5 py-2.5 rounded-lg font-medium shadow-sm transition-all">
        + Add New Address
      </button>
      <a href="{{ routes.account_url }}" class="text-gray-600 hover:text-gray-900 underline">
        ‚Üê Back to Account
      </a>
    </div>
  </div>

  <!-- Address Cards -->
  <div>
    {% paginate customer.addresses by 8 %}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {% for address in customer.addresses %}
      <div x-data="{ editModal: false }"
        class="relative bg-white border border-gray-200 rounded-xl shadow hover:shadow-lg transition-all p-6 flex flex-col">
        {% if address.id == customer.default_address.id %}
        <span class="absolute top-3 left-3 bg-green-600 text-white text-xs font-semibold px-3 py-1 rounded-full">
          Default
        </span>
        {% endif %}

        <div class="text-sm text-gray-700 mt-2 mb-6 leading-relaxed">
          {{ address | format_address }}
        </div>

        <div class="mt-auto flex gap-3">
          <button x-on:click="editModal = true"
            class="flex-1 bg-gray-900 hover:bg-gray-700 text-white text-xs font-medium py-2.5 rounded-md transition">
            Edit
          </button>
          <button
            class="flex-1 border border-gray-400 text-gray-700 hover:bg-gray-100 text-xs font-medium py-2.5 rounded-md transition"
            data-url="{{ address.url }}" data-delete-address>
            Delete
          </button>
        </div>

        <!-- Edit Modal -->
        <div x-show="editModal"
          class="fixed inset-0 z-50 flex items-center justify-center bg-gray-800 bg-opacity-50 px-4">
          <div class="bg-white rounded-lg shadow-xl w-full max-w-lg p-6 relative">
            <div class="flex justify-between items-center border-b pb-3 mb-4">
              <h2 class="text-lg font-semibold text-gray-800">Edit Address</h2>
              <button x-on:click="editModal = false" class="text-gray-500 hover:text-gray-700">
                {% render 'icon-close' %}
              </button>
            </div>

            {% form 'customer_address', address %}
            {% include 'address-form-fields', form: form %}
            <div class="flex gap-3 mt-6">
              <button type="submit"
                class="flex-1 bg-gray-900 hover:bg-gray-700 text-white py-2 rounded-md font-medium transition">
                Save Changes
              </button>
              <button type="button" x-on:click="editModal = false"
                class="flex-1 border border-gray-400 text-gray-700 hover:bg-gray-100 py-2 rounded-md transition">
                Cancel
              </button>
            </div>
            {% endform %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    {% endpaginate %}
  </div>

  <!-- Create New Address Modal -->
  <div x-show="new_address" class="fixed inset-0 z-50 flex items-center justify-center bg-gray-800 bg-opacity-50 px-4">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-lg p-6 relative">
      <div class="flex justify-between items-center border-b pb-3 mb-4">
        <h2 class="text-lg font-semibold text-gray-800">Add New Address</h2>
        <button x-on:click="new_address = false" class="text-gray-500 hover:text-gray-700">
          {% render 'icon-close' %}
        </button>
      </div>

      {% form 'customer_address', customer.new_address %}
      {% include 'address-form-fields', form: form %}
      <div class="flex gap-3 mt-6">
        <button type="submit"
          class="flex-1 bg-gray-900 hover:bg-gray-700 text-white py-2 rounded-md font-medium transition">
          Save Address
        </button>
        <button type="button" x-on:click="new_address = false"
          class="flex-1 border border-gray-400 text-gray-700 hover:bg-gray-100 py-2 rounded-md transition">
          Cancel
        </button>
      </div>
      {% endform %}
    </div>
  </div>
</div>

<!-- Province / Country Dynamic Logic -->
<script>
  class CustomerAddress {
    constructor() {
      this.initCountryProvinceSelectors();
      this.initDeleteAddressButtons();
    }

    initCountryProvinceSelectors() {
      document.querySelectorAll("select[data-country-selector]").forEach(select => {
        this.updateProvinces(select);
        select.addEventListener("change", () => this.updateProvinces(select));
      });
    }

    updateProvinces(select) {
      const provinces = JSON.parse(select.options[select.selectedIndex].dataset.provinces || "[]");
      const provinceSelector = document.querySelector(`#address_province_${select.dataset.id}`);
      if (!provinceSelector) return;

      if (provinces.length === 0) {
        provinceSelector.innerHTML = "<option value=''>N/A</option>";
        provinceSelector.disabled = true;
      } else {
        provinceSelector.innerHTML = provinces
          .map(([name]) => `<option value='${name}'>${name}</option>`)
          .join("");
        provinceSelector.disabled = false;
      }
    }

    initDeleteAddressButtons() {
      document.querySelectorAll("[data-delete-address]").forEach(btn => {
        btn.addEventListener("click", e => {
          e.preventDefault();
          const confirmed = confirm("Do you really want to delete this address?");
          if (confirmed) {
            document.querySelector(`form[action='${btn.dataset.url}']`).submit();
          }
        });
      });
    }
  }

  document.addEventListener("DOMContentLoaded", () => new CustomerAddress());
</script>