<div class="py-16 bg-gray-50">
  <!-- Section Title -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-3">{{ section.settings.title }}</h1>
    <p class="text-gray-500 text-lg">Browse our curated collections</p>
  </div>

  <!-- Collections Grid -->
  <div class="max-w-6xl mx-auto px-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for collection in collections %}
      {% if collection.all_products_count > 0 %}
        <div class="group relative bg-white rounded-2xl shadow hover:shadow-lg transition duration-300 overflow-hidden border border-gray-100">
          <!-- Collection Image -->
          <a href="{{ collection.url }}" class="block overflow-hidden">
            {% if collection.featured_image != blank %}
              {% assign collection_image = collection.featured_image %}
            {% else %}
              {% assign collection_image = collection.products.first.image %}
            {% endif %}
            
            <img 
              src="{{ collection_image | img_url: 'large' }}" 
              alt="{{ collection.title | escape }}"
              class="w-full h-72 object-cover transform group-hover:scale-105 transition duration-700 ease-in-out"
            >
          </a>

          <!-- Content -->
          <div class="p-6 text-center">
            <h2 class="text-2xl font-semibold text-gray-900 group-hover:text-gray-700 transition">
              {{ collection.title }}
            </h2>
            <p class="text-sm text-gray-500 mt-2">
              {{ collection.all_products_count }} {{ collection.all_products_count | pluralize: 'product', 'products' }}
            </p>
            <a 
              href="{{ collection.url }}"
              class="mt-4 inline-block px-6 py-2 rounded-full text-sm font-medium text-white bg-gray-900 hover:bg-gray-700 transition"
            >
              Explore Now
            </a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Collection List",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Our Collections",
      "label": "Section Title"
    }
  ]
}
{% endschema %}
