{% if pagination.pages > 1 %}
  <nav role="navigation" class="flex justify-center items-center gap-2 my-10">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}" class="px-3 py-2 text-gray-600 hover:text-white hover:bg-gray-800 rounded-md">←</a>
    {% endif %}

    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a href="{{ part.url }}" class="px-3 py-2 text-gray-700 hover:bg-gray-200 rounded-md">{{ part.title }}</a>
      {% elsif part.title == pagination.current_page %}
        <span class="px-3 py-2 bg-gray-800 text-white rounded-md">{{ part.title }}</span>
      {% else %}
        <span class="px-3 py-2 text-gray-500">{{ part.title }}</span>
      {% endif %}
    {% endfor %}

    {% if pagination.next %}
      <a href="{{ pagination.next.url }}" class="px-3 py-2 text-gray-600 hover:text-white hover:bg-gray-800 rounded-md">→</a>
    {% endif %}
  </nav>
{% endif %}